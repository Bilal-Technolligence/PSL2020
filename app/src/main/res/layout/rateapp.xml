<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="300dp"
    android:minHeight="300dp"
    android:background="@color/colorBcakgroundBlack"
    android:orientation="vertical">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"

        android:padding="5dp"
        android:text="Rate Cricket Stream PSL2020"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/button1"
        android:layout_marginTop="10dp"
        android:paddingLeft="27dp"
        android:paddingRight="15dp"
        android:text="Rate us and get a chance to win apple watch through lucky draw"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/points"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="60dp"
        android:weightSum="4"
        android:layout_below="@+id/predicition_layout"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="#36802d"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Exit"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="#36802d"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnrateNow"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Rate now"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="5dp" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="24dp"

        android:background="@color/colorWhite"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/predicition_layout"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:src="@drawable/playstore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Google Play"

            android:paddingTop="18dp"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

    </LinearLayout>




</LinearLayout>