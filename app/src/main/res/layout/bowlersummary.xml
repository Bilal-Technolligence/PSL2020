<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="3dp">

    <TextView
        android:id="@+id/txtBowlerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtBowlerOvers"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/txtBowlerMiddens"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtBowlerMiddens"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/txtBowlerRuns"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtBowlerRuns"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/txtBowlerWickts"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtBowlerWickts"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/txtBowlerEcon"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtBowlerEcon"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:maxLength="3"
        android:text="0.0"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />
</RelativeLayout>