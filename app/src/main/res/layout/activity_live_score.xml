                        android:layout_weight="1"

                        android:src="@drawable/four"/>
                    <ImageView
                        android:id="@+id/imgDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/dot"/>

                    <ImageView
                        android:id="@+id/imgNoball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/noball" />

                    <ImageView
                        android:id="@+id/imgRunout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:src="@drawable/runout" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/summaryLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:weightSum="2"
                    android:background="@color/colorBlue"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/points2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     "
                        android:textSize="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary"
                        android:textSize="20dp"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/mainLayout"
                    android:layout_below="@+id/summaryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <!-- our tablayout to display tabs  -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/summaryTabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlue"
                        android:minHeight="?attr/actionBarSize"
                        android:theme="@style/Theme.MaterialComponents"/>

                    <!-- View pager to swipe views -->
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/summaryPager"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.viewpager.widget.ViewPager>
                </LinearLayout>




            </RelativeLayout>
        </ScrollView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/drawerNavigationView"
            app:headerLayout="@layout/header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            app:menu="@menu/drawar_menu"
            app:itemTextColor="#6c6c6c"
            android:layout_gravity="start"
            ></com.google.android.material.navigation.NavigationView>


    </androidx.drawerlayout.widget.DrawerLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        app:labelVisibilityMode="labeled"
        android:layout_marginEnd="0dp"
        android:background="#ffffff"
        app:itemTextColor="@color/colorDarkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation"/>


</RelativeLayout>